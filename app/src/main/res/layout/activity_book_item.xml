<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/back_layout" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:fillViewport="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">


            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Full Name (As shown on ID)"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/addressET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/phoneEt"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Phone Number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/pickupET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/grey_bg"
                android:fontFamily="@font/estre"
                android:gravity="center_vertical"
                android:hint="Travelling From (Departure Airport)"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateTVdepature"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_bg"
                android:fontFamily="@font/estre"
                android:gravity="center_vertical"
                android:hint="Departure Date"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/destET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/grey_bg"
                android:fontFamily="@font/estre"
                android:gravity="center_vertical"
                android:hint="Travelling To (Arrival AIrport)"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateTVarrival"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_bg"
                android:fontFamily="@font/estre"
                android:gravity="center_vertical"
                android:hint="Arrival Date"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/flightEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Flight Number"
                android:imeOptions="actionDone"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/estre"
                android:hint="Deposit Amount"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/uploadIDCardTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/upload"
                android:drawablePadding="5dp"
                android:fontFamily="@font/estre"
                android:padding="8dp"
                android:text="Upload valid id card"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/idIV"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/uploadTicketTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/upload"
                android:drawablePadding="5dp"
                android:fontFamily="@font/estre"
                android:padding="8dp"
                android:text="Upload traveller's valid travelling ticket"
                android:textColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/ticketIV"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/book_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/estre"
                android:text="Book Item"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>