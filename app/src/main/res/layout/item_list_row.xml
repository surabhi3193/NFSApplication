<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="3dp"
    android:id="@+id/main_lay"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:clickable="true"
    android:focusable="true">


 <ImageView
     android:id="@+id/product_pic"
     android:layout_width="100dp"
     android:layout_height="100dp"
     />

    <RelativeLayout
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_weight="5"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="1-IPHONE"
                android:fontFamily="@font/asap"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="3dp"
                />

        <LinearLayout
            android:id="@+id/departLay"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/head_depart"
                android:textSize="15sp"
                android:padding="3dp"
                android:fontFamily="@font/asap"
                android:textColor="@color/colorPrimaryDark"
                android:text="Departure :  "
                android:layout_width="85dp"
                android:layout_height="wrap_content"
             />

            <TextView
                android:textSize="15sp"
                android:padding="3dp"
                android:fontFamily="@font/asap"
                android:textColor="@color/colorPrimaryDark"
                android:text="Delhi"
                android:id="@+id/depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrivalLay"
            android:layout_below="@+id/departLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/head_arrival"
                android:textSize="15sp"
                android:fontFamily="@font/asap"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Arrival :  "
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:fontFamily="@font/asap"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Agra"
                android:id="@+id/arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/date"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="04/03/2018"
            android:fontFamily="@font/asap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:padding="3dp"
            />

        <Button
            android:id="@+id/details_btn"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:text="View Details"
            android:textColor="@color/white"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:background="@drawable/btn" />
    </LinearLayout>

</LinearLayout>