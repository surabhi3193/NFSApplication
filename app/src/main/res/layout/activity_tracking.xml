<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TrackingActivity">
    <include
        android:id="@+id/topbar"
        layout="@layout/back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/topbar"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:src="@drawable/item" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/product_img"
        android:fontFamily="@font/asap"
        android:text="Iphone"
        android:textAllCaps="true"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/traveler_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/product_img"
        android:fontFamily="@font/asap"
        android:text="Traveller : "
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/traveler_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/traveler_head"
        android:fontFamily="@font/asap"
        android:text="Anthony"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/departureTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/traveler_head"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/product_img"
        android:fontFamily="@font/asap"
        android:text="LHR"
        android:textColor="@color/gray"/>

    <ImageView
        android:id="@+id/arrowimg"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_below="@+id/traveler_head"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/departureTv"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/arrivalTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/traveler_nameTV"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/arrowimg"
        android:fontFamily="@font/asap"
        android:text="BOM"
        android:textColor="@color/gray"/>

    <com.anton46.stepsview.StepsView
        android:id="@+id/stepsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_img"
        android:layout_centerHorizontal="true"
        android:paddingRight="8dp"
        />

    <TextView
        android:id="@+id/location_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepsView"
        android:layout_margin="5dp"
        android:fontFamily="@font/asap"
        android:text="Traveller Current Location :-"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_head"
        android:layout_margin="5dp"
        android:fontFamily="@font/asap"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/chat_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/green_rect"
        android:drawableRight="@drawable/chat_white32"
        android:paddingRight="10dp"
        android:text="Chat"
        android:textColor="@color/white" />
</RelativeLayout>