<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/textview_back_of_item"
    android:gravity="center"
    android:padding="15dp">

    <com.nfsapp.surbhi.nfsapplication.other.GifImageView
        android:id="@+id/loaderGif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/book_headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/loaderGif"
        android:fontFamily="@font/asap"
        android:gravity="center_horizontal"
        android:paddingLeft="7dp"
        android:text="Book"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loaderGif"
        android:fontFamily="@font/asap"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:text="Transection Successfull"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gallery_btn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/camera_btn"
        android:background="@drawable/blue_btn"
        android:fontFamily="@font/asap"
        android:gravity="center"
        android:padding="5dp"
        android:text="Proceed"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
